<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFE4F7"
    tools:context=".About">

<androidx.appcompat.widget.Toolbar
android:id="@+id/toolbar_about"
android:layout_width="match_parent"
android:layout_height="?attr/actionBarSize"
android:background="#7A3F99"
    app:title="About CircleUp"
    app:titleTextColor="@android:color/white" />

<ScrollView
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="1"
android:padding="16dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- App Name and Version -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CircleUp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/aclonica"
        android:gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black"/>



    <!-- About Content - This is where the long text will go -->
    <TextView
        android:id="@+id/text_view_about_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@android:color/black"
    android:text="@string/about_circleup_content"
    />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hope You Enjoy the App!"
        android:textColor="#C53DDC"
        android:textAlignment="center"
        android:textSize="19sp"
        android:layout_marginTop="24dp"
       />

    <!-- Add contact/support info here if desired -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Creator"
        android:textAlignment="viewEnd"
    android:textSize="18sp"
    android:layout_marginTop="24dp"
    android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sana Mehboob"
        android:textAlignment="viewEnd"
        android:textSize="17sp"
        android:layout_marginTop="24dp"
        android:textColor="@android:color/black"/>

</LinearLayout>
</ScrollView>

    </LinearLayout>