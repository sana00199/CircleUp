<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group_chat_toolbar"
    android:layout_width="match_parent"
    android:padding="@dimen/_10sdp"
    android:layout_height="wrap_content"
    android:background="#33083A"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <!-- Group Profile Image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/group_profile_image"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="10dp"
            android:src="@drawable/default_group_img"/>

        <!-- Group Name -->
        <TextView
            android:id="@+id/group_name"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Group Name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Three-Dot Menu -->
<!--    <androidx.cardview.widget.CardView-->
<!--        android:layout_width="@dimen/_40sdp"-->
<!--        android:layout_height="@dimen/_40sdp"-->
<!--        android:layout_marginLeft="@dimen/_79sdp"-->
<!--        android:radius="@dimen/_10sdp"-->
<!--        android:elevation="4dp"-->
<!--        app:cardBackgroundColor="#E2B9EB"-->
<!--        app:cardCornerRadius="10dp">-->

        <ImageView
            android:id="@+id/group_menu"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:padding="10dp"
            android:layout_marginLeft="@dimen/_70sdp"
            android:src="@drawable/group_threedots"
            android:contentDescription="More Options"/>


<!--    </androidx.cardview.widget.CardView>-->

</androidx.appcompat.widget.Toolbar>
