<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="18dp"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/group_profile_image"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="@dimen/_13sdp"
        android:src="@drawable/default_group_img"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
android:orientation="horizontal">



        <TextView
            android:id="@+id/group_name"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="Group Name"
            android:layout_weight="1"
            android:padding="@dimen/_2sdp"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:textColor="#C53DDC"/>

            <Space
                android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


            <TextView
                android:id="@+id/text_unread_countt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:paddingEnd="10dp"
                android:paddingStart="5dp"
                android:text="New"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold|italic"
                android:textColor="#110114"
                android:paddingLeft="@dimen/_24sdp"
                android:paddingRight="@dimen/_4sdp"
                android:visibility="visible"
                android:background="@drawable/unread_badge"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/text_last_message"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="Group Status"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:textStyle="italic"
            />
        <TextView
            android:id="@+id/text_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:textSize="12sp"
            android:visibility="gone"
            android:textColor="@color/gray"
            android:text="12:00 PM" /> -->


    </LinearLayout>


</LinearLayout>
